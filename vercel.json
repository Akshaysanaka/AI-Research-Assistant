{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Frontend/dist"
      }
    },
    {
      "src": "Backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/(ai|auth|profile|dashboard|search|collaborators|opportunities|health)",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
