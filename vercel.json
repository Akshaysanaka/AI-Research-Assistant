{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      },
      "root": "Frontend"
    },
    {
      "src": "Backend/server.js",
      "use": "@vercel/node",
      "root": "Backend"
    }
  ],
  "rewrites": [
    {
      "source": "/(ai|auth|profile|dashboard|search|collaborators|opportunities|health)",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/Frontend/$1"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
