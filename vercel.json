{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      },
      "root": "Frontend"
    },
    {
      "src": "Backend/server.js",
      "use": "@vercel/node",
      "root": "Backend"
    }
  ],
  "routes": [
    {
      "src": "/(ai|auth|profile|dashboard|search|collaborators|opportunities|health)",
      "dest": "/Backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/$1"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
